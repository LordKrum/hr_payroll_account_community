<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Payroll Settings to add Default Salary Journal -->
    <record id="res_config_settings_view_form_inherit_payroll_account" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.payroll.account</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="hr_payroll_community.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Add Default Salary Journal setting after the Accounting section -->
            <xpath expr="//div[@id='hr_payroll_accountant']" position="after">
                <div class="row mt16 o_settings_container"
                     id="hr_payroll_accounting_journal">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="salary_journal_id"
                                   string="Default Salary Journal"/>
                            <div class="text-muted">
                                Default journal to use for payroll accounting entries when no journal is set on the contract or payslip run.
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="salary_journal_id"
                                           domain="[('type', '=', 'general')]"
                                           options="{'no_create': True, 'no_create_edit': True}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
